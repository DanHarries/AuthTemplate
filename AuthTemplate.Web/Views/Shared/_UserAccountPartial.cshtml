@inject SignInManager<MyApplicationUser> signInManager;

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark b-1">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Account" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li>
            <a class="nav-link text-dark" asp-action="Settings" asp-controller="Account">&nbsp; Account</a>
        </li>
        <li>
            <a class="nav-link text-dark"asp-action="Index" asp-controller="Admin" >&nbsp; Role Manager</a>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>