@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Edit Users In Role";
    var roleId = ViewBag.roleId;
}

<h1>Edit Users In Role</h1>


<article class="article-wrapper pb-0 mb-0">
    <div class="article-content">
        <div class="article-inner">
            <div>
                <div class="col-1">&nbsp;</div>
                <div class="col-10">
                    <!-- card start -->
                    <article class="article-wrapper pb-0 mb-0">
                        <div class="article-content">
                            <div class="article-inner">
                                <div>
                                    <div class="author-item">
                                        <div class="author-image">
                                        </div>
                                        <div class="author-info text-center pr-0">
                                            <h3><span>Users in this role</span></h3>
                                            <hr />
                                            <div>
                                                <form method="post" class="mt-3">

                                                    @for (int i = 0; i < Model.Count; i++)
                                                    {
                                                        <div class="frm-row text-center">
                                                            <input type="hidden" asp-for="@Model[i].UserId" />
                                                            <input type="hidden" asp-for="@Model[i].UserName" />
                                                            <h5>
                                                                <label asp-for="@Model[i].IsSelected" class="frm-check-radio-label">

                                                                    <input asp-for="@Model[i].IsSelected" type="checkbox">
                                                                    @Model[i].UserName

                                                                </label>
                                                            </h5>
                                                        </div>
                                                    }
                                                    <hr />
                                                    <div>
                                                        <div class="frm-row text-center">
                                                            <button type="submit" class="frm-button material-button medium">Update</button>
                                                            <a asp-action="EditRole" asp-route-id="@roleId" class="frm-button material-button medium">Cancel</a>
                                                        </div>

                                                    </div>


                                                </form>
                                                <br />
                                            </div>


                                        </div>
                                        <div class="author-image">
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </article>
                </div>
                <div class="col-1">&nbsp;</div>
            </div>
        </div>
    </div>
</article>